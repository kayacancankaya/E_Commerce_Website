@model IEnumerable<Supplier>
<!-- Brand area start -->
<div class="brand-area">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<div class="all-p-title">
					<h3>Markalar</h3>
				</div>
			</div>
			<div class="clear"></div>
			<div class="all-brand singal-p">
				@foreach(var item in Model)
				{
				<div class="singal_brand">
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						<a asp-controller="Home" asp-action="SupplierPage" asp-route-supplierID="@item.SupplierID"> 
							<img src="/resimler/@item.PhotoPath" style="height:80px;width:80px;" alt="@item.BrandName" />
							</a>
					</div>
				</div>
				}
			</div>
		</div>
	</div>
</div>
<!-- footer top area start -->
<section id="sp-bottom-2">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-md-4 sp-bottomcontact">
				<div class="sp-column ">
					<div class="sp-module ">
						<h3 class="sp-module-title"><span>İLETİŞİME GEÇİN</span></h3>
						<div class="sp-module-content">
							<div class="custom">
								<div class="t-bottom-content">
									<p class="adress">
										<em class="fa fa-map-marker"></em>
										<span class="ft-content">
											@await Component.InvokeAsync("Address")
										</span>
									</p>
									<p class="phone">
										<em class="fa fa-phone"></em>
										<span class="ft-content">@await Component.InvokeAsync("Phone")</span>
									</p>
									<p class="email">
										<em class="fa fa-envelope"></em>
										<span class="ft-content">@await Component.InvokeAsync("Email")</span>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>  
		</div>
	</div>
</section>
<footer id="sp-footer">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-md-6">
				<p>Copyright Kayacan Kirpikli @DateTime.Now.ToString("yyyy") Tüm Hakları Sakladır.</p>
			</div>
			<div class="col-sm-6 col-md-6">
				<div class="payment-logo">
					<img src="img/payment.png" alt="" />
				</div>
			</div>
		</div>
	</div>
</footer>
<!-- footer top area end -->
