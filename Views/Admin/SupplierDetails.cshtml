
@{
    ViewData["Title"] = "Marka Detay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model Supplier

<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> MARKA DETAY FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/SupplierEdit" method="post">
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label">Kategori Adı</label>
                            <div class="col-md-9">
                                <input asp-for="BrandName" class="form-control input-lg" placeholder="Marka Adı" required maxlength="100" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3 control-label">
                            @Html.DisplayNameFor(m => m.PhotoPath)
                            </div>
                            <div class="col-md-9">
                                <img src="~/resimler/@Model?.PhotoPath" height="35" width="60"/>
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Aktif Mi?</label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>

                        <input type="hidden" asp-for="SupplierID" />

                    </div>
                    <div class="form-actions right1">
                        <a asp-action="SupplierIndex" class="btn btn-primary">MARKA LİSTESİ</a>
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->

