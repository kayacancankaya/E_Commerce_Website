@model Product

@{
    ViewData["Title"] = "Ürün Detay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- BEGIN PAGE CONTENT-->
<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> ÜRÜN DETAY FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/ProductEdit" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-body">

                        <div class="form-group">
                            <label asp-for="ProductName" class="col-md-3 control-label">ÜRÜN ADI</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.ProductName)
                            </div>
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="UnitPrice" class="col-md-3 control-label">FİYAT</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.UnitPrice)
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">KATEGORİ</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.CategoryID)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">MARKA</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.SupplierID)
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Stock" class="col-md-3 control-label">STOK</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.Stock)
                            </div>
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Discount" class="col-md-3 control-label">İNDİRİM</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.Discount)
                            </div>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">STATÜ</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.StatusID)
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Keywords" class="col-md-3 control-label">ANAHTAR KELİME</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.Keywords)
                            </div>
                            <span asp-validation-for="Keywords" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Kdv" class="col-md-3 control-label">KDV</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.Kdv)
                            </div>
                            <span asp-validation-for="Kdv" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Related" class="col-md-3 control-label">BUNA BAKANLAR</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.Related)
                            </div>
                            <span asp-validation-for="Related" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Notes" class="col-md-3 control-label">NOT</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.Notes)
                            </div>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhotoPath" class="col-md-3 control-label">RESİM</label>
                            <div class="col-md-9">
                                @if (Model != null)
                                {
                                    <img src="~/resimler/@Model.PhotoPath"/>
                                }
                                else
                                {
                                <p>Resim Bulunamadı.</p>
                                }

                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Aktif Mi?</label>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.Active)
                            </div>
                        </div>

                        <input type="hidden" asp-for="ProductID" />

                    </div>
                    <div class="form-actions right1">
                        <a asp-action="ProductIndex" class="btn btn-primary">ÜRÜN LİSTESİ</a>
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->
