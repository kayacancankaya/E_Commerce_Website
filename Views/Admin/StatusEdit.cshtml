
@{
    ViewData["Title"] = "Durum Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model Status

<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> DURUM GÜNCELLEME FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/StatusEdit/@Model.StatusID" method="post">
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label">Durum Adı</label>
                            <div class="col-md-9">
                                <input asp-for="StatusName" class="form-control input-lg" placeholder="Durum Adı" required maxlength="100" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Aktif Mi?</label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>

                        <input type="hidden" asp-for="StatusID" />

                    </div>
                    <div class="form-actions right1">
                        <a asp-action="StatusIndex" class="btn btn-primary">DURUM LİSTESİ</a>
                        <input type="submit" name="name" value="DÜZELT" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>