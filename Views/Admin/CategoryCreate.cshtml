@model Category

@{
    ViewData["Title"] = "CategoryCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
		<div class="portlet box purple">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-gift"></i> Kategori Giriş Formu
				</div>
				<div class="tools">
					<a href="" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="" class="reload">
					</a>
					<a href="" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body form">
				<form class="form-horizontal" role="form" action="/admin/CategoryCreate" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-body">
						<div class="form-group">
							<label class="col-md-3 control-label">Kategori Seçiniz</label>
							<div class="col-md-9">
								@Html.DropDownList("ParentID",(IEnumerable<SelectListItem>)ViewData["categoryList"],
								"Seçiniz",new{@class ="form-control input-lg" })
							</div>
						</div>
						<div class="form-group">
							<label asp-for="CategoryName" class="col-md-3 control-label"></label>
							<div class="col-md-9">
								<input type="text" class="form-control input-lg" placeholder="Kategori Adı Burada"
								 asp-for="CategoryName" required maxlength="50">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label">Aktif Mi?</label>
							<input type="checkbox" asp-for="Active">
						</div>
						<span asp-validation-for="CategoryName" class="text-danger"></span>
					</div>
					<div class="form-actions right1">
						<a asp-action="CategoryIndex" class="btn btn-primary">Kategori Listesi</a>
						<button type="submit" name="name" value="Kaydet" class="btn btn-success">Kaydet</button>
					</div>
				</form>
			</div>
		</div>
    </div>
</div >


