
@{
    ViewData["Title"] = "StatusCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model Status

<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="portlet box purple ">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-gift"></i> Durum Giriş Formu
				</div>
				<div class="tools">
					<a href="" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="" class="reload">
					</a>
					<a href="" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body form">
				<form class="form-horizontal" role="form" action="/admin/StatusCreate" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-body">
						<div class="form-group">
							<label asp-for="StatusName" class="col-md-3 control-label"></label>
							<div class="col-md-9">
								<input type="text" class="form-control input-lg" placeholder="Durum Adı Burada"
									   asp-for="StatusName" required maxlength="100">
							</div>
						</div>
						<div class="form-group">
							<label asp-for="Active" class="col-md-3 control-label"></label>
							<input type="checkbox" asp-for="Active">
						</div>
						<span asp-validation-for="StatusName" class="text-danger"></span>
					</div>
					<div class="form-actions right1">
						<a asp-action="StatusIndex" class="btn btn-primary">Durum Listesi</a>
						<button type="submit" name="name" value="Kaydet" class="btn btn-success">Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

